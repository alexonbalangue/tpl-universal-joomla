					default="production"
					label="TPL_UNIVERSAL_METHODDESIGNER_LABEL"
					description="TPL_UNIVERSAL_METHODDESIGNER_DESC">
						<option value="custom">TPL_UNIVERSAL_METHODDESIGNER_OPTION_CUSTOM</option>
						<option value="production">TPL_UNIVERSAL_METHODDESIGNER_OPTION_PROD</option>
				</field>
			</fieldset>
			<fieldset name="AMP-HTMLviews" label="AMP-HTML views">
				<field name="ampHTML"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="AMP-HTML"
					description="TPL_UNIVERSAL_AMPHTML_DESC">
						<option value="amp">JYes</option>
						<option value="">JNo</option>
				</field>
			</fieldset>
			<fieldset name="Hidding" label="Hidding support">
				<field name="Pages-js-default"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="TPL_UNIVERSAL_HIDEJSDEFAULT_LABEL"
					description="TPL_UNIVERSAL_HIDEJSDEFAULT_DESC">
						<option value="">Keep default</option>
						<option value="home">home</option>
						<option value="component">Component</option>
				</field>
				<field name="ampHTMLbeta"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="not yet"
					description="TPL_UNIVERSAL_XXXX_DESC">
						<option value="1">JYes</option>
						<option value="0">JNo</option>
				</field>
			</fieldset>
