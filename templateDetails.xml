		<language tag="fr-FR">fr-FR/fr-FR.tpl_universal.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="groups-html"
					type="list"
					default=""
					label="TPL_UNIVERSAL_METHODHTML_LABEL"
					description="TPL_UNIVERSAL_METHODHTML_DESC">
						<option value="">Neutral (without design)</option>
						<option value="boostrap2-home">Boostrap V2.3.2 (Home) = Nothing</option>
						<option value="boostrap2-component">Boostrap V2.3.2 (Component) = Nothing</option>
						<option value="boostrap3-home">Boostrap V3.3.6 (Home)</option>
						<option value="boostrap3-component">Boostrap V3.3.6 (Component)</option>
						<option value="boostrap4-home">Boostrap V4.x (Home) = Nothing</option>
						<option value="boostrap4-component">Boostrap V4.x (Component) = Nothing</option>
				</field>
				<field name="groups-script"
					type="list"
					default="custom"
					label="TPL_UNIVERSAL_METHODSCRIPT_LABEL"
					description="TPL_UNIVERSAL_METHODSCRIPT_DESC">
						<option value="custom">TPL_UNIVERSAL_METHODSCRIPT_CUSTOM</option>
						<option value="blue">TPL_UNIVERSAL_METHODSCRIPT_BLUE</option>
						<option value="default">TPL_UNIVERSAL_METHODSCRIPT_DEFAULT</option>
						<option value="green">TPL_UNIVERSAL_METHODSCRIPT_GREEN</option>
						<option value="marsala">TPL_UNIVERSAL_METHODSCRIPT_MARSALA</option>
						<option value="red">TPL_UNIVERSAL_METHODSCRIPT_RED</option>
						<option value="turquoise">TPL_UNIVERSAL_METHODSCRIPT_TURQUOISE</option>
						<option value="violet">TPL_UNIVERSAL_METHODSCRIPT_VIOLET</option>
						<option value="pink">TPL_UNIVERSAL_METHODSCRIPT_PINK</option>
						<option value="yellow">TPL_UNIVERSAL_METHODSCRIPT_YELLOW</option>
				</field>
				<field name="groups-method"
					type="list"
					default="production"
					label="TPL_UNIVERSAL_METHODDESIGNER_LABEL"
					description="TPL_UNIVERSAL_METHODDESIGNER_DESC">
						<option value="custom">TPL_UNIVERSAL_METHODDESIGNER_OPTION_CUSTOM</option>
						<option value="production">TPL_UNIVERSAL_METHODDESIGNER_OPTION_PROD</option>
				</field>
			</fieldset>
			<fieldset name="AMP-HTMLviews" label="AMP-HTML views">
				<field name="ampHTML"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="AMP-HTML"
					description="TPL_UNIVERSAL_AMPHTML_DESC">
						<option value="amp">JYes</option>
						<option value="">JNo</option>
				</field>
			</fieldset>
			<fieldset name="Hidding" label="Hidding support">
				<field name="Pages-js-default"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="TPL_UNIVERSAL_HIDEJSDEFAULT_LABEL"
					description="TPL_UNIVERSAL_HIDEJSDEFAULT_DESC">
						<option value="">Keep default</option>
						<option value="home">home/accueil</option>
						<option value="component">Component</option>
				</field>
			</fieldset>
			<fieldset name="TPLuniversal" label="Edit templates">
				<field name="logoFile" class="" type="media" default=""
					label="TPL_UNIVERSAL_LOGO_LABEL"
					description="TPL_UNIVERSAL_LOGO_LABEL" />	
				<field name="logoMobFile" class="" type="media" default=""
					label="TPL_UNIVERSAL_LOGOMOB_LABEL"
					description="TPL_UNIVERSAL_LOGOMOB_LABEL" />			
			</fieldset>
		</fields>
	</config>
